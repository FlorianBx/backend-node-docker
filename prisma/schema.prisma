datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  role     String   @default("user")
}

model MenuItem {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  price     Float
  orders    Order[]  @relation("OrderItems")
}

model Order {
  id        Int       @id @default(autoincrement())
  items     MenuItem[] @relation("OrderItems")
  status    OrderStatus
  createdAt DateTime  @default(now())
}

enum Role {
  ADMIN
  SERVER
  COOK
}

enum OrderStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}
